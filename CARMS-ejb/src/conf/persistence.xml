<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CARMS-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/CARMS</jta-data-source>
    <class>entity.CarCategoryEntity</class>
    <class>entity.CarEntity</class>
    <class>entity.CarModelEntity</class>
    <class>entity.DispatchRecordEntity</class>
    <class>entity.EmployeeEntity</class>
    <class>entity.OutletEntity</class>
    <class>entity.OwnCustomerEntity</class>
    <class>entity.PartnerEntity</class>
    <class>entity.RentalRateEntity</class>
    <class>entity.ReservationEntity</class>
    <class>entity.CustomerEntity</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
